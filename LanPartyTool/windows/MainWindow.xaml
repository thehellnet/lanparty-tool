<Window x:Class="LanPartyTool.windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LanPartyTool"
        xmlns:config="clr-namespace:LanPartyTool.config"
        mc:Ignorable="d"
        Title="MainWindow" Height="360" Width="640">
    <Grid>
        <GroupBox x:Name="PathGroupBox" Header="Path" Height="96" Margin="10,10,10,0" VerticalAlignment="Top">
            <Grid>
                <Label x:Name="GameExeLabel" Content="Game EXE" HorizontalAlignment="Left" Margin="10,10,0,0"
                       VerticalAlignment="Top" />
                <TextBox x:Name="GameExeText" Height="23" Margin="78,14,10,0" TextWrapping="Wrap" IsReadOnly="True"
                         VerticalAlignment="Top"/>
                <Label x:Name="CfgFileLabel" Content="CFG file" HorizontalAlignment="Left" Margin="10,41,0,0"
                       VerticalAlignment="Top" />
                <TextBox x:Name="CfgFileText" Height="23" Margin="78,45,10,0" TextWrapping="Wrap" IsReadOnly="True"
                         VerticalAlignment="Top" />
            </Grid>
        </GroupBox>
        <TextBox x:Name="LogText" Margin="10,111,10,10" IsReadOnly="True" FontFamily="DejaVu Sans Mono" />
    </Grid>
</Window>