<Window x:Class="LanPartyTool.windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LanPartyTool"
        xmlns:config="clr-namespace:LanPartyTool.config"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="800">
    <Grid>
        <GroupBox x:Name="PathGroupBox" Header="Path" Height="124" Margin="10,10,10,0" VerticalAlignment="Top">
            <Grid>
                <Label x:Name="GameExeLabel" Content="Game EXE" HorizontalAlignment="Left" Margin="10,10,0,0"
                       VerticalAlignment="Top" />
                <TextBox x:Name="GameExeText" Height="23" Margin="84,13,10,0" TextWrapping="NoWrap" IsReadOnly="True"
                         VerticalAlignment="Top"/>
                <Label x:Name="ToolCfgLabel" Content="Tool CFG" HorizontalAlignment="Left" Margin="10,41,0,0"
                       VerticalAlignment="Top" />
                <TextBox x:Name="ToolCfgText" Height="23" Margin="84,44,10,0" TextWrapping="NoWrap" IsReadOnly="True"
                         VerticalAlignment="Top" />
                <Label x:Name="ProfileCfgLabel" Content="Profile CFG" HorizontalAlignment="Left" Margin="10,72,0,0"
                    VerticalAlignment="Top" />
                <TextBox x:Name="ProfileCfgText" Height="23" Margin="84,75,10,0" TextWrapping="NoWrap" IsReadOnly="True"
                    VerticalAlignment="Top" />
            </Grid>
        </GroupBox>
        <WebBrowser x:Name="LogWebBrowser" Margin="10,139,10,10" />
    </Grid>
</Window>