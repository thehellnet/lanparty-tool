<Window x:Class="LanPartyTool.windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="LanPartyTool" Height="480" Width="800">
    <Grid>
        <GroupBox x:Name="PathGroupBox" Header="Path" Height="156" Margin="10,10,10,0" VerticalAlignment="Top">
            <Grid>
                <Label x:Name="GameExeLabel" Content="Game EXE" HorizontalAlignment="Left" Margin="10,13,0,0"
                       VerticalAlignment="Top" Height="23" />
                <TextBox x:Name="GameExeText" Height="23" Margin="95,13,85,0" TextWrapping="NoWrap" IsReadOnly="True"
                         VerticalAlignment="Top" />
                <Label x:Name="ToolCfgLabel" Content="Tool CFG" HorizontalAlignment="Left" Margin="10,44,0,0"
                       VerticalAlignment="Top" Height="23" />
                <TextBox x:Name="ToolCfgText" Height="23" Margin="95,44,85,0" TextWrapping="NoWrap" IsReadOnly="True"
                         VerticalAlignment="Top" />
                <Label x:Name="ProfileCfgLabel" Content="Profile CFG" HorizontalAlignment="Left" Margin="10,75,0,0"
                       VerticalAlignment="Top" Width="80" Height="23" />
                <TextBox x:Name="ProfileCfgText" Height="23" Margin="95,75,85,0" TextWrapping="NoWrap"
                         IsReadOnly="True" VerticalAlignment="Top" />
                <Button x:Name="GameExeButton" Content="Open dir" Margin="0,13,10,0" VerticalAlignment="Top"
                        Height="23" HorizontalAlignment="Right" Width="70" Click="GameExeButton_Click" />
                <Button x:Name="ToolCfgButton" Content="Open dir" Margin="0,44,10,0" VerticalAlignment="Top"
                        Height="23" HorizontalAlignment="Right" Width="70" Click="ToolCfgButton_Click" />
                <Button x:Name="ProfileCfgButton" Content="Open dir" Margin="0,75,10,0" VerticalAlignment="Top"
                        Height="23" HorizontalAlignment="Right" Width="70" Click="ProfileCfgButton_Click" />
                <Label x:Name="SocketStatusLabel" Content="Socket status" HorizontalAlignment="Left"
                       Margin="10,106,0,0" VerticalAlignment="Top" Height="23" />
                <TextBox x:Name="SocketStatusText" Margin="95,106,0,0" TextWrapping="NoWrap" IsReadOnly="True"
                         VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" Height="23" />
                <Button x:Name="ShowCodKeyButton" Content="Show CodKey" Margin="0,106,10,0" VerticalAlignment="Top"
                        Height="23" HorizontalAlignment="Right" Width="100" Click="ShowCodKeyButton_Click" />
                <Label x:Name="ServerAddressLabel" Content="Server address" HorizontalAlignment="Left"
                       Margin="200,106,0,0" VerticalAlignment="Top" Height="23" />
                <TextBox x:Name="ServerAddressText" Height="23" Margin="292,106,115,0" TextWrapping="NoWrap"
                         IsReadOnly="True" VerticalAlignment="Top" />
            </Grid>
        </GroupBox>
        <RichTextBox x:Name="LogText" Margin="10,171,10,10" HorizontalScrollBarVisibility="Auto"
                     VerticalScrollBarVisibility="Auto" />
    </Grid>
</Window>